{
  "name": "rx-eventstore",
  "version": "0.0.1-alpha.2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --noStackTrace && node .vscode/remap.js",
    "testd": "jest --updateSnapshot"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chrismcleod/eventstore"
  },
  "license": "MIT",
  "dependencies": {
    "colors": "^1.1.2",
    "esproto": "0.0.1-alpha.1",
    "long": "^3.2.0",
    "protobufjs": "^6.7.3",
    "rxjs": "^5.4.0",
    "rxjs-extra": "^0.1.1",
    "uuid": "^3.0.1",
    "uuid-parse": "^1.0.0"
  },
  "devDependencies": {
    "@types/colors": "^1.1.3",
    "@types/jest": "^20.0.2",
    "@types/long": "^3.0.31",
    "@types/node": "^7.0.18",
    "@types/protobufjs": "^5.0.31",
    "@types/ramda": "^0.0.9",
    "@types/uuid": "^2.0.29",
    "jest": "^20.0.4",
    "remap-istanbul": "^0.9.5",
    "ts-jest": "^20.0.7",
    "typescript": "^2.4.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./specs/tsconfig.json"
      }
    },
    "verbose": false,
    "testRegex": "specs/.*\\.spec\\.ts$",
    "transform": {
      ".(ts|tsx)": "./node_modules/ts-jest/preprocessor.js"
    },
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}