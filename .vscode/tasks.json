{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "taskName": "build",
      "type": "process",
      "command": "tsc",
      "args": [
        "-p",
        "./src",
        "-w"
      ],
      "problemMatcher": [
        "$tsc-watch",
        "$tslint5"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}