{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [{
            "taskName": "watch",
            "command": "tsc",
            "isShellCommand": true,
            "isBuildCommand": true,
            "args": [
                "-w",
                "-p",
                "./src"
            ],
            "showOutput": "silent",
            "isBackground": true,
            "problemMatcher": [
                "$tsc-watch",
                "$tslint5"
            ]
        },
        {
            "taskName": "run",
            "command": "node",
            "isShellCommand": true,
            "isBuildCommand": false,
            "args": [
                "dist/index.js"
            ],
            "showOutput": "always",
            "isBackground": false
        }
    ]
}